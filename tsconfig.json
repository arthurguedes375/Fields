{
  "compilerOptions": {
    "outDir": "./lib/",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@types/*": [
        "./@types/*"
      ]
    },
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}